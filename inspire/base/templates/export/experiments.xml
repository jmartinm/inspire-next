{%- from "export/macros/base.xml" import controlfield -%}
{%- from "export/macros/common.xml" import url, oai_pmh, creation_modification_date, spires_sysno, collections, deleted_recid -%}
{%- from "export/macros/experiments.xml" import name, affiliation, title, name_variants, description, spokesperson -%}

<record>
{% if record.control_number -%}
    {{controlfield(tag="001", value=record.control_number)}}
{% endif -%}
{%- if record.agency_code -%}
    {{controlfield(tag="003", value=record.agency_code)}}
{%- endif -%}
{%- if record.date_and_time_of_latest_transaction -%}
    {{controlfield(tag="005", value=record.date_and_time_of_latest_transaction)}}
{%- endif -%}
{%- if record.oai_pmh -%}
    {{oai_pmh(value=record.oai_pmh)}}
{%- endif -%}
{%- if record.creation_modification_date -%}
    {{creation_modification_date(value=record.creation_modification_date)}}
{%- endif -%}
{%- if record.spires_sysno -%}
    {{spires_sysno(value=record.spires_sysno)}}
{%- endif -%}
{%- if record.collections -%}
    {{collections(value=record.collections)}}
{%- endif -%}
{%- if record.deleted_recid -%}
    {{deleted_recid(value=record.deleted_recid)}}
{% endif %}
{%- if record.name -%}
    {{name(value=record.name)}}
{%- endif -%}
{%- if record.affiliation -%}
    {{affiliation(value=record.affiliation)}}
{%- endif -%}
{%- if record.title -%}
    {{title(value=record.title)}}
{%- endif -%}
{%- if record.name_variants -%}
    {{name_variants(value=record.name_variants)}}
{%- endif -%}
{%- if record.description -%}
    {{description(value=record.description)}}
{%- endif -%}
{%- if record.spokesperson -%}
    {{spokesperson(value=record.spokesperson)}}
{%- endif -%}

</record>