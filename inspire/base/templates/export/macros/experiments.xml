{%- from "export/macros/base.xml" import datafield_open, datafield_close, render_controlfield, subfield -%}

{%- macro name(value) -%}
    {{ datafield_open('119') }}
    {{ subfield('a', value) }}
    {{ datafield_close() }}
{%- endmacro -%}

{%- macro affiliation(value) -%}
    {{ datafield_open('119') }}
    {{ subfield('u', value) }}
    {{ datafield_close() }}
{%- endmacro -%}

{%- macro title(value) -%}
    {{ datafield_open('245') }}
    {%- if title.title %}
        {{ subfield('a', title.title) }}
    {% endif -%}
    {%- if title.subtitle %}
        {{ subfield('b', title.subtitle) }}
    {% endif -%}
    {%- if title.source %}
        {{ subfield('9', title.source) }}
    {% endif -%}
    {{ datafield_close() }}
{%- endmacro -%}

{%- macro name_variants(value) -%}
    {%- for name_variants in value %}
        {{ datafield_open('419') }}
        {{ subfield('a', value) }}
        {{ datafield_close() }}
    {%- endfor -%}
{%- endmacro -%}

{%- macro description(value) -%}
    {{ datafield_open('520') }}
    {{ subfield('a', value) }}
    {{ datafield_close() }}
{%- endmacro -%}

{%- macro spokesperson(value) -%}
    {%- for spokesperson in value %}
        {{ datafield_open('702') }}
        {{ subfield('a', value) }}
        {{ datafield_close() }}
    {%- endfor -%}
{%- endmacro -%}

