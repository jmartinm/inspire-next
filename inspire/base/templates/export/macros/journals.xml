{%- from "export/macros/base.xml" import datafield_open, datafield_close, render_controlfield, subfield -%}


{%- macro issn(value) -%}
    {{ datafield_open('022') }}
    {{ subfield('a', value) }}
    {{ datafield_close() }}
{%- endmacro -%}

{%- macro coden(value) -%}
    {{ datafield_open('030') }}
    {{ subfield('a', value) }}
    {{ datafield_close() }}
{%- endmacro -%}

{%- macro title(value) -%}
    {{ datafield_open('130') }}
    {%- if title.title %}
        {{ subfield('a', title.title) }}
    {% endif -%}
    {{ datafield_close() }}
{%- endmacro -%}

{%- macro short_title(value) -%}
    {%- for short_title in value %}
        {{ datafield_open('711') }}
        {%- if short_title.short_title %}
            {{ subfield('a', short_title.short_title) }}
        {% endif -%}
        {{ datafield_close() }}
    {%- endfor -%}
{%- endmacro -%}

{%- macro name_variants(value) -%}
    {%- for name_variants in value %}
        {{ datafield_open('730') }}
        {{ subfield('a', value) }}
        {{ datafield_close() }}
    {%- endfor -%}
{%- endmacro -%}

